generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Plan{
  FREE
  PREMIUM
  ENTERPRISE
}

enum TemplateType {
  CAROUSEL
  HORIZONTAL
  SLANT
  GRID
}

enum TestimonialType {
  TEXT
  VIDEO
  TWITTER
  INSTAGRAM
}

model User {
  id        String     @id @default(cuid())
  name      String
  email     String     @unique
  password  String?
  campaigns Campaign[]
  plan      Plan  @default(FREE)
  videoCount  Int @default(0)
  razorpaySubId String?
  planExpiresAt DateTime?
  createdAt DateTime   @default(now())
  usages    Usage[]
}

model Campaign {
  id           String        @id @default(cuid())
  title        String
  description  String
  websiteUrl   String?
  category     String?
  shareLink    String?       @unique
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId       String
  testimonials Testimonial[]
  templateType TemplateType @default(CAROUSEL)
  createdAt    DateTime      @default(now())
}

model Testimonial {
  id              String   @id @default(cuid())
  favourite       Boolean  @default(false)
  archived        Boolean  @default(false)
  campaign        Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  campaignId      String
  name            String
  email           String
  position        String?
  testimonialType TestimonialType?
  playbackId      String?
  content         String?
  rating          Int      @default(5)
  createdAt       DateTime @default(now())
}


model Usage {
  id  String @id @default(cuid())
  userId String 
  month String
  videoUsed Int @default(0)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId,month])
}